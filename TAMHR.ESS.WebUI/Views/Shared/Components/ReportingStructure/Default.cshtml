@model IEnumerable<TAMHR.ESS.Domain.ActualReportingStructureView>
@inject TAMHR.ESS.Infrastructure.DomainServices.ConfigService ConfigService
@{ 
    var reportingStructures = Model;
}
@if (reportingStructures == null || reportingStructures.Count() == 0)
{
    <div class="text-center p-3 text-muted">
        <i class="fa fa-clipboard font-large-1"></i><br/>@Localizer["There is no reporting structures"]
    </div>
}
else
{
<div class="row" style="margin-top: -1rem;">
    <div class="col">
        <div class="timeline small">
            @{
                foreach (var item in reportingStructures)
                {
                    <div class="timeline-item">
                        <div class="timeline-badge">
                            <img class="timeline-badge-userpic" src="@ConfigService.ResolveAvatar(item.ParentNoReg)" />
                        </div>
                        <div class="timeline-body">
                            <div class="timeline-body-arrow"></div>
                            <div class="timeline-body-head">
                                <div class="timeline-body-head-caption">
                                    <a href="javascript:;" class="timeline-body-title d-block">@item.ParentName</a>
                                    <span class="timeline-detail">@item.ParentPostName</span>
                                </div>
                            </div>
                            <div class="timeline-body-content">@item.ParentJobName as reporting level @item.HierarchyLevel</div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
}