@model Microsoft.AspNetCore.Diagnostics.IExceptionHandlerFeature
@{
    Layout = "~/Views/Shared/_ErrorLayout.cshtml";
    ViewData["Title"] = "Something Wrong";
    var error = Model != null && Model.Error != null
        ? (string.IsNullOrEmpty(Model.Error.Message) && Model.Error.InnerException != null ? Model.Error.InnerException.Message : Model.Error.Message)
        : "Unknown exception";

    //to view detail error, uncomment this code
    //error = Newtonsoft.Json.JsonConvert.SerializeObject(Model);
}
<section class="flexbox-container">
    <div class="col-12 d-flex align-items-center justify-content-center">
        <div class="col-md-4 col-10 box-shadow-2 p-0">
            <div class="card border-grey border-lighten-3 m-0">
                <div class="card-header border-0">
                    <div class="card-title d-block text-center">
                        <div class="p-1">
                            <a href="~/"><img src="~/img/logo/ico-logo1.png" alt="branding logo"></a>
                        </div>
                    </div>
                    <h6 class="card-subtitle line-on-side text-muted text-center font-small-3 pt-3 bold"><span>Welcome to e-Form</span></h6>
                </div>
                <div class="card-content">
                    <div class="card-body text-center">
                        <h3 class="font-medium-3">Oooops Something Went Wrong</h3>
                        <p class="mt-0 font-small-3">
                            @*20240911|Roni|dihide berdasarkan rekomendasi hasil Penetration Testing oleh IT Security TAM (Kelvin)*@
                             @error 
                        </p>
                        <div class="mt-2">
                            <i class="fa fa-cog spinner font-large-2" style="line-height: 2.8rem"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
