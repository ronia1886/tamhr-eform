@section pageToolbars {
    <div class="dropdown">
        <a href="javascript:;" class="btn btn-sm dropdown-toggle red-sunglo" data-toggle="dropdown">
            <i class="ft-settings"></i> <span class="d-none d-sm-inline">@Localizer["Actions"]</span> <i class="ft-chevron-down"></i>
        </a>
        <ul class="dropdown-menu dropdown-menu-right">
            <li>
                <a href="javascript:;" data-target="grid" data-trigger="modal" data-modal="json-category-modal" data-modal-title="Create new JSON category" data-modal-ajax="true" data-ajax-url="~/masterdata/jsoncategory/load">
                    @Localizer["Create Vehicle"]
                </a>
            </li>
            <li>
                <a href="~/api/json-category/download">
                    @Localizer["Download"]
                </a>
            </li>
            <li>
                <a href="javascript:;" data-trigger="modal" data-modal="upload-modal" data-modal-title="Upload JSON category" data-modal-ajax="true" data-ajax-url="~/core/home/genericdatauploader" data-parameters-url="~/api/json-category">
                    @Localizer["Upload"]
                </a>
            </li>
        </ul>
    </div>
}
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header bordered">
                <h3 class="card-title">@Localizer["List of JSON Categories"]</h3>
                <div class="heading-elements">
                    @await Html.PartialAsync("_Toolbars")
                </div>
            </div>
            <div class="card-body p-0 table-wrap no-table-header">
                @(Html.Kendo().Grid<TAMHR.ESS.Domain.JsonCategory>()
                    .Name("grid")
                    .HtmlAttributes(new { data_filter = "json-categories-filter" })
                    .Columns(columns =>
                    {
                        columns.Bound(c => c.Id).Title("JSON Category")
                            .ClientTemplate(
                                @"<div class=""media"">
                                    <div class=""media-body ml-3"">
                                        <h6 class=""mt-1 mb-0 bold"">
                                            #:Title#
                                        </h6>
                                        <small>#:Description#</small>
                                    </div>
                                </div>"
                            );

                        columns.Bound(c => c.Id)
                            .Title("Action")
                            .Width(150)
                            .HtmlAttributes(new { @class = "text-center" })
                            .ClientTemplate(
                                @"<div class=""btn-group"">
                                    <a class=""btn btn-sm blue-sharp"" data-trigger=""modal"" data-modal=""json-category-modal"" data-modal-title=""Edit JSON category"" data-modal-ajax=""true"" data-ajax-url=""~/masterdata/jsoncategory/load"" data-parameters-id=""#:Id#"">
                                        <i class=""ft-edit""></i>
                                    </a>
                                    <a class=""btn btn-sm red"" data-trigger=""handler"" data-url=""~/api/json-category"" data-handler=""deleteHandler"" data-parameters-id=""#:Id#"">
                                        <i class=""ft-trash""></i>
                                    </a>
                                </div>"
                            );
                    })
                    .NoRecords(config => config.Template(@"<div class=""text-center p-4 text-muted""><i class=""fa fa-clipboard font-large-1""></i><br/>" + Localizer["No data found"].Value + "</div>"))
                    .DataSource(dataSource => dataSource
                        .Ajax()
                        .Read(read => read.Url(Url.Content("~/api/json-category/gets")))
                        .Group(group => group.Add(x => x.Category))
                        .Sort(sort =>
                        {
                            sort.Add(x => x.Category);
                            sort.Add(x => x.OrderIndex);
                        })
                        .PageSize(8)
                    )
                    .Pageable(options =>
                    {
                        options.Input(true);
                        options.Numeric(false);
                        options.AlwaysVisible(false);
                    })
                    .Deferred()
                )
            </div>
        </div>
    </div>
</div>