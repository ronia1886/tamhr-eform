@section pageToolbars {
    <div class="dropdown">
        <a href="javascript:;" class="btn btn-sm dropdown-toggle red-sunglo" data-toggle="dropdown">
            <i class="ft-settings"></i> <span class="d-none d-sm-inline">@Localizer["Actions"]</span> <i class="ft-chevron-down"></i>
        </a>
        <ul class="dropdown-menu dropdown-menu-right">
            <li>
                <a href="javascript:;" data-target="grid" data-trigger="modal" data-modal="allowance-detail-modal" data-modal-title="Create new Allowance Detail" data-modal-ajax="true" data-ajax-url="~/masterdata/allowancedetail/load">
                    @Localizer["Create Allowance Detail"]
                </a>
            </li>
            <li>
                <a href="~/api/allowancedetail/download">
                    @Localizer["Download"]
                </a>
            </li>
            <li>
                <a href="javascript:;" data-trigger="modal" data-modal="upload-modal" data-modal-title="Upload Allowance Detail" data-modal-ajax="true" data-ajax-url="~/core/home/genericdatauploader" data-parameters-url="~/api/allowancedetail">
                    @Localizer["Upload"]
                </a>
            </li>
        </ul>
    </div>
}
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header bordered">
                <h3 class="card-title">@Localizer["List of Allowance Details"]</h3>
                <div class="heading-elements">
                    @await Html.PartialAsync("_Toolbars")
                </div>
            </div>
            <div class="card-body p-0 table-wrap no-table-header">
                @(Html.Kendo().Grid<TAMHR.ESS.Domain.AllowanceDetail>()
                    .Name("grid")
                    .HtmlAttributes(new { data_filter = "allowance-details-filter" })
                    .Columns(columns =>
                    {
                        columns.Bound(c => c.Id).Title("Allowance Detail").ClientTemplate(@"
                            <div class=""media"">
                                <div class=""media-body ml-3"">
                                    <h6 class=""mt-1 mb-0 bold"">#:Type#</h6>
                                    <small class=""d-block"">#:$.toDefault(SubType, '-')#</small>
                                </div>
                            </div>
                        ");

                        columns.Bound(c => c.Id).Title("Class").ClientTemplate(@"
                            <div class=""media"">
                                <div class=""media-body ml-3"">
                                    <h6 class=""mt-1 mb-0 bold"">Class From - #:ClassFrom#</h6>
                                    <small>Class To - #:ClassTo#</small>
                                </div>
                            </div>
                        ").Width(200);

                        columns.Bound(c => c.Ammount).Title("Amount").HtmlAttributes(new { @class = "text-right" }).Format("{0:N0} IDR").Width(170);
                        columns.Bound(c => c.Id).Title("Action").HtmlAttributes(new { @class = "text-center" }).ClientTemplate(@"
                            <a class=""btn btn-sm blue-sharp"" data-trigger=""modal"" data-modal=""allowance-detail-modal"" data-modal-title=""Edit Allowance Detail"" data-modal-ajax=""true"" data-ajax-url=""~/masterdata/allowancedetail/load"" data-parameters-id=""#:Id#"">
                                <i class=""ft-edit""></i>
                            </a>
                        ").Width(90);
                    })
                    .NoRecords(config => config.Template(@"<div class=""text-center p-2 text-muted""><i class=""fa fa-clipboard font-large-1""></i><br/>" + Localizer["No data found"].Value + "</div>"))
                    .DataSource(dataSource => dataSource
                        .Ajax()
                        .Read(read => read.Url(Url.Content("~/api/allowancedetail/gets")))
                        .PageSize(8)
                    )
                    .Pageable(options =>
                    {
                        options.Input(true);
                        options.Numeric(false);
                        options.AlwaysVisible(false);
                    })
                    .Deferred()
                )
            </div>
        </div>
    </div>
</div>