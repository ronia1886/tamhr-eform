@section pageToolbars {
    <div class="dropdown">
        <a href="javascript:;" class="btn btn-sm dropdown-toggle red-sunglo" data-toggle="dropdown">
            <i class="ft-settings"></i> <span class="d-none d-sm-inline">@Localizer["Actions"]</span> <i class="ft-chevron-down"></i>
        </a>
        <ul class="dropdown-menu dropdown-menu-right">
            <li>
                <a href="javascript:;" data-target="grid" data-trigger="modal" data-modal="letter-template-modal" data-modal-title="Create new Letter Template" data-modal-ajax="true" data-ajax-url="~/masterdata/lettertemplate/load">
                    @Localizer["Create Letter Template"]
                </a>
            </li>
            <li>
                <a href="~/api/master-data/letter-template/download">
                    @Localizer["Download"]
                </a>
            </li>
        </ul>
    </div>
}
<link href="~/lib/summernote/summernote-lite.min.css" rel="stylesheet">
@section scripts {
    <script type="text/javascript" src="~/lib/summernote/summernote-lite.min.js"></script>
    <script type="text/javascript">
        (function ($, app) {
            app.registerHandler("dataInterceptor", function (d) {
                //d.LetterContent = tinyMCE.get('LetterContent').getContent();
                d.LetterContent = $('#LetterContent').summernote('code');

                return d;
            });
        })(jQuery, app);

        $(document).on('focusin', function (e) {
            if ($(event.target).closest(".note-dialog, .note-modal").length) {
                e.stopImmediatePropagation();
            }
        });
    </script>
}
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header bordered">
                <h3 class="card-title">@Localizer["List of Letter Templates"]</h3>
                <div class="heading-elements">
                    @await Html.PartialAsync("_Toolbars")
                </div>
            </div>
            <div class="card-body p-0 table-wrap no-table-header">
                @(Html.Kendo().Grid<TAMHR.ESS.Domain.LetterTemplate>()
                    .Name("grid")
                    .HtmlAttributes(new { data_filter = "letter-templates-filter" })
                    .Columns(columns =>
                    {
                        columns.Bound(c => c.Id).Title("Letter Template").ClientTemplate(@"
                            <div class=""media"">
                                <div class=""media-body ml-3"">
                                    <h6 class=""mt-1 mb-0 bold"">
                                        #:Title# (#:LetterKey#)
                                    </h6>
                                    <small>#:Description#</small>
                                </div>
                            </div>
                        ");
                        columns.Bound(c => c.Id).Title("Action").HtmlAttributes(new { @class = "text-center" }).ClientTemplate(@"
                            <div class=""btn-group"">
                                <a class=""btn btn-sm blue-sharp"" data-trigger=""modal"" data-modal=""letter-template-modal"" data-modal-title=""Edit Letter Template"" data-modal-ajax=""true"" data-ajax-url=""~/masterdata/lettertemplate/load"" data-parameters-id=""#:Id#"">
                                    <i class=""ft-edit""></i>
                                </a>
                                <a class=""btn btn-sm red"" data-trigger=""handler"" data-url=""~/api/master-data/letter-template"" data-handler=""deleteHandler"" data-parameters-id=""#:Id#"">
                                    <i class=""ft-trash""></i>
                                </a>
                            </div>
                        ").Width(150);
                    })
                    .NoRecords(config => config.Template(@"<div class=""text-center p-2 text-muted""><i class=""fa fa-clipboard font-large-1""></i><br/>" + Localizer["No data found"].Value + "</div>"))
                    .DataSource(dataSource => dataSource
                        .Ajax()
                        .Read(read => read.Url(Url.Content("~/api/master-data/letter-template/gets")))
                        .Sort(sort =>
                        {
                            sort.Add("LetterKey");
                        })
                        .PageSize(8)
                    )
                    .Pageable(options =>
                    {
                        options.Input(true);
                        options.Numeric(false);
                        options.AlwaysVisible(false);
                    })
                    .Deferred()
                )
            </div>
        </div>
    </div>
</div>