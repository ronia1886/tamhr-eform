@model ProxyTime
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ScriptManager.RegisterReferences("combobox");
}
@section scripts {
    <partial name="_Script" />
}
<div class="card">
    <div class="row">
        <div class="col-md-6 order-2 order-md-1">
            <form method="post" action="~/api/proxy-time-form/proxy-in">
                @Html.HiddenFor(x => x.Id)
                @Html.HiddenFor(x => x.GeoLocation)
                @Html.HiddenFor(x => x.Latitude)
                @Html.HiddenFor(x => x.Longitude)
                <div class="p-4">
                    <div class="section-heading mb-4">
                        <p class="text-uppercase font-weight-bold mb-0">Form Absensi</p>
                        <h5 class="text-header m-0">
                            @Localizer["Form ini digunakan untuk melakukan <b>check-in</b> atau <b>check-out</b> ketika anda mulai bekerja atau sudah selesai bekerja."]
                        </h5>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label>No Reg.</label>
                            @Html.TextBoxFor(x => x.NoReg, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="form-group col-md-12">
                            <label>@Localizer["Name"]</label>
                            @Html.TextBox("Name", User.GetClaim("Name"), new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="form-group col-md-12">
                            <label>@Localizer["Work From"]</label>
                            @(Html.KendoComboBoxFor(x => x.WorkingTypeCode, "WorkingType")
                                .Placeholder(Localizer["Please select working type"].Value)
                                .Enable(false)
                                .Deferred()
                            )
                            <span class="invalid" data-validation-for="GeoLocation"></span>
                            <span class="invalid" data-validation-for="Latitude"></span>
                            <span class="invalid" data-validation-for="Longitude"></span>
                            <span class="invalid" data-validation-for="WorkingTypeCode"></span>
                        </div>
                    </div>
                    <div class="mt-4">
                        <a class="px-4 btn dark text-uppercase mr-2 @(!Model.CanProxyIn ? "disabled" : string.Empty)" href="javascript:;" data-trigger="submit" data-callback="saveHandler">
                            <i class="icon-clock font-red mr-2"></i> @Localizer["Proxy In"] @Model.ProxyInText
                        </a>
                        <a class="px-4 btn text-uppercase @(!Model.CanProxyOut ? "disabled" : string.Empty)" href="javascript:;" data-trigger="handler" data-handler="proxyOutHandler">
                            <i class="icon-clock mr-2"></i> @Localizer["Proxy Out"] @Model.ProxyOutText
                        </a>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-6 order-1 order-md-2">
            <div id="map-wrapper" class="d-flex align-items-center" style="height: 100%; background-color: #eff2f7;">
                <img src="~/img/assets/asset-10.png" alt="login" class="mx-auto my-5" style="width: 65%;">
            </div>
        </div>
    </div>
</div>