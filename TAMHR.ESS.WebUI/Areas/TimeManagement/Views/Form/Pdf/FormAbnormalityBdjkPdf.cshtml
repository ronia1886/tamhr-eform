    <thead class="border">
        <tr>
            <th class="border text-center col-1" style="width: 10%">Date</th>
            <th class="border text-center col-1" style="width: 10%">In</th>
            <th class="border text-center col-1" style="width: 10%">Out</th>
            <th class="border text-center col-2" style="width: 10%">Activity</th>
            <th class="border text-center col-1" style="width: 10%">Duration</th>
            <th class="border text-center col-1" style="width: 5%">Taxi</th>
            <th class="border text-center col-1" style="width: 5%">Uang Makan</th>
            <th class="border text-center col-1" style="width: 10%">Code</th>
            <th class="border text-center col-3" style="width: 20%">Reason</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in result.Details)
        {
            var timein = item.WorkingTimeIn.HasValue ? @item.WorkingTimeIn.Value.ToString("HH : mm") : @strip;
            var timeout = item.WorkingTimeOut.HasValue ? @item.WorkingTimeOut.Value.ToString("HH : mm") : @strip;
            var taxi = item.Taxi ? "Yes" : @strip;
            var uangmakan = item.UangMakanDinas ? "Yes" : @strip;

            <tr class="text-center">
                <td style="text-align:center" class="border">@item.WorkingDate.ToString("dd-MM-yyyy") </td>
                <td style="text-align:center" class="border">@timein </td>
                <td style="text-align:center" class="border">@timeout</td>
                <td style="text-align:center" class="border">@item.ActivityCode - @item.ActivityName</td>
                <td style="text-align:center" class="border">@item.Duration </td>
                <td style="text-align:center" class="border">@taxi </td>
                <td style="text-align:center" class="border">@uangmakan </td>
                <td style="text-align:center" class="border">@item.BdjkCode</td>
                <td style="text-align:center" class="border">@item.BdjkReason</td>
                <!--More properties-->
            </tr>
        }
    </tbody>
    <!--Add footer for totals-->
</table>

