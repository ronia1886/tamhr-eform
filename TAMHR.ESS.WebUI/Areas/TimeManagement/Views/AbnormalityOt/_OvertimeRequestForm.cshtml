@model TAMHR.ESS.Infrastructure.ViewModels.SpklOvertimeUpdateViewModel;
@inject TAMHR.ESS.Infrastructure.DomainServices.AbnormalityOverTimeService svc;
@inject TAMHR.ESS.Infrastructure.DomainServices.MdmService MdmService ;
@{
    ScriptManager.RegisterReferences("datetimepicker", "grid", "datepicker", "combobox", "chart", "numeric", "upload", "listview");
    var maxFileSize = 5 * 1000000;
    //var fileUrl = svc.GetCommonFIle(Model.CommonFileId.HasValue ? Model.CommonFileId.Value : Guid.Empty);
    var currentNoReg = User.GetClaim("NoReg");
    var name = @User.GetClaim("Name");
    var postName = @User.GetClaim("PostName");
    var postCode = @User.GetClaim("PostCode");
    var organizationStructure = MdmService.GetActualOrganizationStructure(currentNoReg, postCode);
    var orgCode = organizationStructure?.OrgCode;
}

@section styles {
    <link rel="stylesheet" href="~/plugins/bootstrap-clockpicker/bootstrap-clockpicker.min.css" />
}

<form method="post" action="~/api/abnormality-over-time/request">
    <script type="text/javascript" src="~/plugins/bootstrap-clockpicker/bootstrap-clockpicker.min.js"></script>
    <script type="text/javascript" src="~/js/pages/spkl-report.js"></script>

    <script type="text/javascript">
        $(function () {
            $('.clockpicker').clockpicker({
                donetext: 'Done',
                autoclose: true
            });
        });

        function CalculateDuration(){
            var postData = {
                OvertimeIn : $('#OvertimeIn').val() + ":00",
                OvertimeOut : $('#OvertimeOut').val() + ":00",
                OvertimeBreak : $('#OvertimeBreak').val()
            }

            $.ajax({
                url: app.resolveUrl("~/api/abnormality-over-time/calculate-overtime-duration"),
                data: postData,
                type: 'POST'
            }).done(function (data) {
                console.log(data);
                var numerictextbox = $("#OvertimeTimeDuration").data("kendoNumericTextBox");
                numerictextbox.value(data);
                //$('#OvertimeTimeDuration').trigger("change");
            });
        }

        app.registerHandler("dataInterceptor", function (d) {
            d.OvertimeCategoryCode = $('#OvertimeCategoryCode').val();
            return d;
        });
    </script>

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">@Localizer["Over Time Detail"]</h4>
                    <a class="heading-elements-toggle">
                        <i class="ft-ellipsis-h font-medium-3"></i>
                    </a>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <li>
                                <a data-action="collapse">
                                    <i class="ft-minus"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <fieldset>
                                    @Html.HiddenFor(x => x.Id)
                                    @Html.HiddenFor(x => x.OvertimeInAdjust)
                                    @Html.HiddenFor(x => x.OvertimeOutAdjust)

                                    @Html.HiddenFor(x => x.OvertimeBreakAdjust)
                                    @Html.HiddenFor(x => x.DurationAdjust)
                                    @Html.HiddenFor(x => x.OvertimeCategoryCode)
                                    @Html.HiddenFor(x => x.OvertimeIn)
                                    @Html.HiddenFor(x => x.OvertimeOut)

                                    <legend>@Localizer["Over Time Data"]</legend>

                                    <div class="row">
                                        <div class="form-group col-md-6 col-xs-12" id="DivOvertimeHourIn">
                                            <label><span class="required" aria-required="true"> * </span><span class="d-none d-md-inline">@Localizer["Proxy In (HH:mm)"]</span><span class="d-inline d-md-none">@Localizer["Proxy In"]</span></label>
                                            <div class="input-group clockpicker">
                                                @Html.TextBoxFor(x => x.OvertimeIn, "{0:HH:mm}", ApplicationHelper.Enable(new { @class = "form-control", placeholder = Localizer["Pilih waktu (HH:mm)"].Value, data_validation_for = "OvertimeIn", @onchange = "CalculateDuration()", id = "OvertimeIn", @readonly = "true"}, false))
                                                <div class="input-group-append input-group-addon">
                                                    <span class="input-group-text bg-blue text-white"><i class="fa fa-clock-o"></i></span>
                                                </div>
                                            </div>
                                            <span class="invalid" data-validation-for="OvertimeIn"></span>
                                        </div>
                                        <div class="form-group col-md-6 col-xs-12" id="DivOvertimeHourOut">
                                            <label><span class="required" aria-required="true"> * </span><span class="d-none d-md-inline">@Localizer["Proxy Out (HH:mm)"]</span><span class="d-inline d-md-none">@Localizer["Proxy Out"]</span></label>
                                            <div class="input-group clockpicker">
                                                @Html.TextBoxFor(x => x.OvertimeOut, "{0:HH:mm}", ApplicationHelper.Enable(new { @class = "form-control", placeholder = Localizer["Pilih waktu (HH:mm)"].Value, data_validation_for = "OvertimeOut", @onchange = "CalculateDuration()", id = "OvertimeOut", @readonly = "true" }, false))
                                                <div class="input-group-append input-group-addon">
                                                    <span class="input-group-text bg-blue text-white"><i class="fa fa-clock-o"></i></span>
                                                </div>
                                            </div>
                                            <span class="invalid" data-validation-for="OvertimeOut"></span>
                                        </div>
                                        <div class="form-group col-md-6 col-xs-12">
                                            <label><span class="required" aria-required="true"> * </span>@Localizer["Overtime Break (in Minute)"]</label>
                                            @(Html.Kendo().NumericTextBoxFor(x => x.OvertimeBreak)
                                        .Value(Model.OvertimeBreak)
                                        .HtmlAttributes(new { @class = "form-control text-right", @data_validation_for = "OvertimeBreak", @onchange = "CalculateDuration()", id = "OvertimeBreak" })
                                        .Format("##.#")
                                        .Decimals(1)
                                        .Min(0)
                                        .Max(1000)
                                        .Enable(true)
                                    )
                                            <span class="invalid" data-validation-for="OvertimeBreak"></span>
                                        </div>
                                        <div class="form-group col-md-6 col-xs-12">
                                            <label><span class="required" aria-required="true"> * </span>@Localizer["Duration"]</label>
                                            @(Html.Kendo().NumericTextBoxFor(x => x.DurationAdjust)
                                        .Value(Model.DurationAdjust)
                                        .HtmlAttributes(new { style = "width: 100%", @class = "form-control text-right", @data_validation_for = "Duration", id = "OvertimeTimeDuration", @readonly = "true"})
                                        .Format("##.#")
                                        .Decimals(1)
                                        .Min(0)
                                        .Enable(true)
                                        .Max(1000)
                                    )
                                            <span class="invalid" data-validation-for="Duration"></span>
                                        </div>

                                        <div class="form-group col-md-12 col-xs-12">
                                            <label><span class="required" aria-required="true"> * </span>@Localizer["Category"]</label>
                                            @(Html.KendoComboBoxFor(x => x.OvertimeCategoryCode, "CategorySPKL")
                                        .HtmlAttributes(new { @class = "form-control", data_validation_for = "OvertimeCategory" })
                                        .Placeholder(Localizer["Select Category"].Value)
                                        .SelectedIndex(-1)
                                        .Enable(true)

                                    )
                                            <span class="invalid" data-validation-for="OvertimeCategoryCode"></span>
                                        </div>
                                    </div>

                                </fieldset>
                            </div>

                            <div class="col-md-12 col-sm-12">

                                <fieldset>
                                    <legend>@Localizer["Reason"]</legend>
                                    <div class="form-group ">
                                        <label><span class="required" aria-required="true"> * </span>@Localizer["Detail Notes"]</label>
                                        <br />
                                        @Html.TextAreaFor(x => x.OvertimeReason, ApplicationHelper.Enable(new { @class = "form-control", rows = 5, data_validation_for = "OvertimeReason", placeholder = Localizer["Input Notes"].Value }, true))
                                        <span class="invalid" data-validation-for="OvertimeReason"></span>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="actions">
        <a class="btn red-haze" data-trigger="handler" data-handler="saveHandler" data-interceptor="dataInterceptor">@Localizer["Save"]</a>
    </div>

</form>