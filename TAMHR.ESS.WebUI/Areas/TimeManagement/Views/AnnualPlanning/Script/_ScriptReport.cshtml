       for (var i=0; i< data.length; i++) {
           var dataItem = data[i];
           var tr = $('#gridReport').find("[data-uid='" + dataItem.uid + "']");

           if((dataItem.PositionLevel > 6 && dataItem.Title == 'OT') || (dataItem.PositionLevel < 7 && dataItem.Title == 'BDJK')){
