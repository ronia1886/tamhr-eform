@{ 
    ScriptManager.RegisterReferences("datepicker", "combobox");
}
@section pageToolbars {
    <div class="dropdown">
        <a href="javascript:;" class="btn btn-sm dropdown-toggle red-sunglo" data-toggle="dropdown">
            <i class="ft-settings"></i> <span class="d-none d-sm-inline">@Localizer["Actions"]</span> <i class="ft-chevron-down"></i>
        </a>
        <ul class="dropdown-menu dropdown-menu-right">
            <li>
                <a href="javascript:;" data-target="grid" data-trigger="modal" data-modal="language-modal" data-modal-title="Create new Language" data-modal-ajax="true" data-ajax-url="~/core/settings/load" data-parameters-handler="language">
                    @Localizer["Create Language"]
                </a>
            </li>
            <li>
                <a href="~/api/language/download">
                    @Localizer["Download"]
                </a>
            </li>
            <li>
                <a href="javascript:;" data-trigger="modal" data-modal="upload-modal" data-modal-title="Upload Language" data-modal-ajax="true" data-ajax-url="~/core/home/genericdatauploader" data-parameters-url="~/api/language">
                    @Localizer["Upload"]
                </a>
            </li>
        </ul>
    </div>
}
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header bordered">
                <h3 class="card-title">@Localizer["List of Languages"]</h3>
                <div class="heading-elements">
                    <partial name="Components/_LanguagesToolbars" />
                </div>
            </div>
            <div class="card-body p-0 table-wrap no-table-header">
                @(Html.Kendo().Grid<Language>()
                    .Name("grid")
                    .HtmlAttributes(new { data_filter = "languages-filter" })
                    .Columns(cols =>
                    {
                        cols.Bound(c => c.Id)
                            .Title(Localizer["Language"].Value)
                            .ClientGroupHeaderTemplate("#:value# Translation")
                            .ClientTemplate(
                                @"<div class=""media"">
                                    <div class=""media-body"">
                                        <small class=""d-block""><b>Key:</b> #:TranslateKey#</small>
                                        <small class=""d-block""><b>Translate:</b> #:TranslateValue#</small>
                                    </div>
                                </div>"
                            );

                        cols.Bound(c => c.Id)
                            .Title(Localizer["Action"].Value)
                            .Width(90)
                            .HtmlAttributes(new { @class = "text-center" })
                            .ClientTemplate(
                                @"<div class=""btn-group"">
                                    <a class=""btn btn-sm blue-sharp"" data-trigger=""modal"" data-modal=""language-modal"" data-modal-title=""Edit Language"" data-modal-ajax=""true"" data-ajax-url=""~/core/settings/load"" data-parameters-id=""#:Id#"" data-parameters-handler=""language"">
                                        <i class=""ft-edit""></i>
                                    </a>
                                    <a class=""btn btn-sm red-haze"" data-trigger=""handler"" data-url=""~/api/language"" data-handler=""deleteHandler"" data-parameters-id=""#:Id#"">
                                        <i class=""ft-trash""></i>
                                    </a>
                                </div>"
                            );
                    })
                    .NoRecords(config => config.Template(@"<div class=""text-center p-2 text-muted""><i class=""fa fa-clipboard font-large-1""></i><br/>" + Localizer["No data found"].Value + "</div>"))
                    .DataSource(dataSource => dataSource
                        .Ajax()
                        .Read(read => read.Url(Url.Content("~/api/language/gets")))
                        .PageSize(10)
                        .Group(group => group.Add(x => x.CultureCode))
                        .Sort(sort => sort.Add(x => x.TranslateKey))
                    )
                    .Pageable(options =>
                    {
                        options.Input(true);
                        options.Numeric(false);
                        options.AlwaysVisible(false);
                    })
                    .Deferred()
                )
            </div>
        </div>
    </div>
</div>