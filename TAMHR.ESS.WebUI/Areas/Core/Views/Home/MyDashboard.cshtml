        kendo.syncReady(function () { jQuery("#chart3").kendoChart({ "legend": { "labels": { "template": "${ text } (${ value })" }, "position": "right" }, "series": [{ "name": "Total", "type": "pie", "field": "Total", "categoryField": "Title" }], "dataSource": { "schema": { "model": { "fields": { "Title": { "type": "string" }, "Total": { "type": "number" } } } }, "data": [{ "Title": "In Progress", "Total": 3 }, { "Title": "Rejected", "Total": 2 }, { "Title": "Approved", "Total": 10 }, { "Title": "Draft", "Total": 2 }, { "Title": "Revised", "Total": 5 }] }, "seriesColors": ["#03a9f4", "#ff9800", "#fad84a", "#4caf50"], "tooltip": { "template": "${ category }: ${ value }", "visible": true } }); });
    </script>
}
