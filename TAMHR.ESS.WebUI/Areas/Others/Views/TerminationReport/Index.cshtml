            .Columns(columns =>
            {
                columns.Bound(c => c.DocumentNumber).Title(Localizer["Termination<br>Number"].Value).HeaderHtmlAttributes(new {@class="text-center",style="vertical-align:middle" }).Width(170);
                columns.Bound(c => c.NoReg).Title(Localizer["No Reg"].Value).Width(80).HeaderHtmlAttributes(new {@class="text-center",style="vertical-align:middle" });
                columns.Bound(c => c.Name).Title(Localizer["Employee Name"].Value).Width(150).HeaderHtmlAttributes(new {@class="text-center",style="vertical-align:middle" });
                columns.Bound(c => c.Division).Title(Localizer["Division"].Value).Width(150).HeaderHtmlAttributes(new {@class="text-center",style="vertical-align:middle" });
                columns.Bound(c => c.Class).Title(Localizer["Class"].Value).Width(70).HeaderHtmlAttributes(new {@class="text-center",style="vertical-align:middle" });
                columns.Bound(c => c.Reason).Title(Localizer["Reason"].Value).Width(150).HeaderHtmlAttributes(new {@class="text-center",style="vertical-align:middle" });
                columns.Bound(c => c.TerminationName).Title(Localizer["Termination<br>Type"].Value).Width(120).HeaderHtmlAttributes(new {@class="text-center",style="vertical-align:middle" });
                columns.Bound(c => c.EndDate).Title(Localizer["End Date"].Value).Format("{0:dd/MM/yyyy}").Width(170).EditorTemplateName("DateOnly")
                //.ClientTemplate(@"#:kendo.toString(EndDate,'dd/MM/yyyy')#").HtmlAttributes(new {@class="text-center" })
                .HeaderHtmlAttributes(new {@class="text-center",style="vertical-align:middle" });
                columns.Bound(c => c.DocumentStatus).Title(Localizer["Document<br>Status"].Value).Width(120).HeaderHtmlAttributes(new {@class="text-center",style="vertical-align:middle" });
                columns.Command(command => { command.Edit(); }).Title(Localizer["Action"].Value).Width(230).HeaderHtmlAttributes(new { @class = "text-center", style = "vertical-align:middle" });
            })
            .DataSource(dataSource => dataSource
            .Ajax()
            .Read(read => read.Url(Url.Content("~/api/termination-report/gets")).Data("$.getData"))
            .Update(update => update.Url(Url.Content("~/api/termination-report/update-inline")))
            .PageSize(20)
            .Model(model=> {
                model.Id(p => p.Id);
                model.Field(p => p.Id).Editable(false); // Ensure ID isn't editable
                model.Field(p => p.DocumentNumber).Editable(false);
                model.Field(p => p.NoReg).Editable(false);
                model.Field(p => p.Name).Editable(false);
                model.Field(p => p.Division).Editable(false);
                model.Field(p => p.Reason).Editable(false);
                model.Field(p => p.Class).Editable(false);
                model.Field(p => p.TerminationName).Editable(false);
                model.Field(p => p.DocumentNumber).Editable(false);
                model.Field(p => p.DocumentStatus).Editable(false);
            })
            )
            .Pageable(options =>
            {
                options.Input(true);
                options.Numeric(false);
                options.PageSizes(new[] { 5, 10, 20, 25, 100, 200 });
            })
            .HtmlAttributes(new { style = "height:600px;" })
            .Sortable()
            .Editable(editable => editable.Mode(GridEditMode.InLine))
            .Resizable(resizable => resizable.Columns(true))
            .NoRecords(config => config.Template(@"<div class="" text-center p-2 text-muted""><i class="" fa fa-clipboard font-large-1""></i><br />" + Localizer["No data found"].Value + "</div>"))
            .Scrollable()
