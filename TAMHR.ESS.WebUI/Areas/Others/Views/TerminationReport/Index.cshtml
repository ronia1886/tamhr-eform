<div class="card">
    <div class="row d-flex no-padding row-col-separator-xl">
        <div class="col-md-12">
            <div class="m-widget">
                <div class="m-widget-header">
                    <h3 class="m-widget-title">@Localizer["Report Summary"]</h3>
                    <span class="m-widget-desc">@Localizer["Report summary by Period"]</span>
                </div>
                <div class="m-widget-item pt-0">
                    <div class="row">
                        <div class="col-md-12 analytic-block">
                            @(Html.Kendo().Chart<TerminationReportViewModel>()
                                .Name("chart")
                                .HtmlAttributes(new { style = "max-height: 200px; position: relative;" })
                                .SeriesColors(new[] {  "#749be3", "#5B2971", "#246B61", "#9717A8","#AA4839", "#005A91", "#007FAD", "#00D3E4", "#FF96DA", "#FF7D81", "#E0FF4D" })                                
                                .Series(series =>
                                {
                                    series.Column(x => x.Total, x => x.Name)
                                        .ColorField("Color")
                                        .Labels(l2 => l2.Visible(true)
                                            .Template("#=dataItem.Total==undefined?\"\":dataItem.Total#")                                           
                                        );
                                        //.VisibleInLegendField("VisibleInLegend");
                                    
                                })
                                
                                @*.CategoryAxis(axis => axis
                                    .MajorGridLines(lines => lines.Visible(false))
                                    .Line(line => line.Visible(false))
                                )*@
                                .ValueAxis(axis => axis.Numeric()
                                    //.Max(28)
                                    .MajorGridLines(lines => lines.Visible(true))
                                    .Visible(false)
                                )
                                @*.Tooltip(tooltip => tooltip
                                    .Visible(true)
                                    .Template("${ app.translate(category) }: ${ value }")
                                )*@
                                .Deferred()
                            )
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

