@using Newtonsoft.Json
@model DocumentRequestDetailViewModel<LostAndReturnViewModel>
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header bordered">
                <h4 class="card-title">@Localizer["Lost & Return Request Detail"]</h4>
                <a class="heading-elements-toggle">
                    <i class="ft-ellipsis-h font-medium-3"></i>
                </a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li>
                            <a data-action="collapse">
                                <i class="ft-minus"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <fieldset>
                                <legend>@Localizer["Request Detail"]</legend>
                                <div class="form-group">
                                    <label><span class="required" aria-required="true"> * </span>@Localizer["Document Category"]</label>
                                    @(Html.KendoComboBoxFor(x => x.Object.DocumentCategoryCode, "LoadAndReturnType")
                                        .Enable(AclHelper.CanEdit())
                                        .Placeholder(Localizer["Please select document category"].Value)
                                        .Deferred()
                                    )
                                    <span class="invalid" data-validation-for="Object.DocumentCategoryCode"></span>
                                </div>
                                <div class="form-group">
                                    <label><span class="required" aria-required="true"> * </span>@Localizer["Request Type"]</label>
                                    @(Html.KendoComboBoxFor(x => x.Object.CategoryCode, "LostAndReturnCategory")
                                        .Enable(AclHelper.CanEdit())
                                        .Events(events => {
                                            events.Change(@<text>function() {
                                                var value = this.value();
                                                if (value == "lost") {
                                                    $("#lostEl").removeClass("hidden");
                                                    $("#returnEl").addClass("hidden");
                                                    $("#detailWrapper").removeClass("hidden");
                                                } else if (value == "return") {
                                                    $("#detailWrapper").addClass("hidden");
                                                    $("#returnEl").removeClass("hidden");
                                                    $("#lostEl").addClass("hidden");
                                                }
                                            }</text>);

                                            events.DataBound(@<text>function() {
                                                this.trigger("change");            
                                            }
                                            </text>);
                                        })
                                        .Placeholder(Localizer["Please select request type"].Value)
                                        .Deferred()
                                    )
                                    <span class="invalid" data-validation-for="Object.CategoryCode"></span>
                                </div>
                                <div id="lostEl" class="form-group hidden">
                                    <div class="form-group">
                                        <label><span class="required" aria-required="true"> * </span>@Localizer["Lost Date"]</label>
                                        @(Html.Kendo().DatePickerFor(x => x.Object.LostDate)
                                            .HtmlAttributes(new { @class = "form-control", data_validation_for = "Object.LostDate", placeholder = Localizer["Please select date"].Value })
                                            .Enable(AclHelper.CanEdit())
                                            .Format("dd/MM/yyyy")
                                            .Max(DateTime.Now)
                                            .Deferred()
                                        )
                                        <span class="invalid" data-validation-for="Object.LostDate"></span>
                                    </div>
                                    <div class="form-group">
                                        <label><span class="required" aria-required="true"> * </span>@Localizer["Location"]</label>
                                        @Html.TextBoxFor(x => x.Object.Location, ApplicationHelper.Enable(new { @class = "form-control", data_validation_for = "Object.Location", placeholder = Localizer["Please input location"].Value }, AclHelper.CanEdit()))
                                        <span class="invalid" data-validation-for="Object.Location"></span>
                                    </div>
                                </div>
                                <div id="returnEl" class="form-group hidden">
                                    <label><span class="required" aria-required="true"> * </span>@Localizer["Damaged Remarks"]</label>
                                    @Html.TextAreaFor(x => x.Object.DamagedRemarks, ApplicationHelper.Enable(new { @class = "form-control", data_validation_for = "Object.DamagedRemarks", placeholder = Localizer["Please input damaged remarks"].Value, style = "height: 173px;" }, AclHelper.CanEdit()))
                                    <span class="invalid" data-validation-for="Object.DamagedRemarks"></span>
                                </div>
                                <div class="form-group">
                                    <label><span class="required" aria-required="true"> * </span>@Localizer["Attachment"]</label>
                                    @if (AclHelper.CanEdit())
                                    {
                                        @(await Component.InvokeAsync<FileUpload>(new { docId = Model.DocumentApprovalId, field = "Object.FilePath" }))
                                        <span id="detailWrapper" class="d-block font-small-1 bold font-yellow-soft hidden">@Localizer["Please attach reference letter from police"]</span>
                                        <span class="invalid" data-validation-for="Object.FilePath"></span>
                                    }
                                    else
                                    {
                                        <br />
                                        @(await Component.InvokeAsync<Attachment>(new { files = Model.Attachments, fieldCategory = "Object.FilePath" }))
                                    }
                                </div>
                            </fieldset>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <fieldset>
                                <legend>@Localizer["Notes"]</legend>
                                <div class="form-group inline">
                                    <label>@Localizer["Notes Detail"]</label>
                                    @Html.TextAreaFor(x => x.Object.Remarks, ApplicationHelper.Enable(new { @class = "form-control", data_validation_for = "Object.Remarks", placeholder = Localizer["Please input remarks"].Value, style = "height: 173px;" }, AclHelper.CanEdit()))
                                    <span class="invalid" data-validation-for="Object.Remarks"></span>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>