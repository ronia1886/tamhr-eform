@model DocumentRequestDetailViewModel<NotebookRequestViewModel>
@{ 
    var maxDate = Model.Object.StartDate.AddYears(1);

    if(Model.Object.StartDate.Day == 29 && Model.Object.StartDate.Month == 2 && maxDate.Month == 2)
    {
        maxDate = maxDate.AddDays(1);
    }
}
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header bordered">
                <h4 class="card-title">@Localizer["Carrying Notebook"]</h4>
                <a class="heading-elements-toggle">
                    <i class="ft-ellipsis-h font-medium-3"></i>
                </a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li>
                            <a data-action="collapse">
                                <i class="ft-minus"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <fieldset>
                                <legend>@Localizer["Request Detail"]</legend>
                                <div class="form-group">
                                    <label><span class="required" aria-required="true"> * </span>@Localizer["Asset Number"]</label>
                                    @Html.TextBoxFor(x => x.Object.AssetNumber, ApplicationHelper.Enable(new { @class = "form-control", @min = 0, @onkeypress = "return (event.charCode == 8 || event.charCode == 0) ? null : event.charCode >= 48 && event.charCode <= 57", @data_validation_for = "Object.AssetNumber", placeholder = Localizer["Please input asset number"].Value }, AclHelper.CanEdit()))
                                    <span class="invalid" data-validation-for="Object.AssetNumber"></span>
                                </div>
                                <div class="form-group">
                                    <label><span class="required" aria-required="true"> * </span>@Localizer["Start Date"]</label>
                                    @(Html.Kendo().DatePickerFor(x => x.Object.StartDate)
                                        .HtmlAttributes(new { @class = "form-control", @data_validation_for = "Object.RequestDate", placeholder = Localizer["Please select date"].Value })
                                        .Enable(AclHelper.CanEdit())
                                        .Events(events => events.Change(@<text>function() {
                                            var value = this.value(),
                                                nextYearDate = new Date(value.getFullYear() + 1, value.getMonth(), value.getDate()),
                                                $endDate = $("#Object_EndDate").data("kendoDatePicker");

                                            $endDate.setOptions({
                                                max: nextYearDate
                                            });

                                            $endDate.value(nextYearDate);
                                        }</text>))
                                        .Min(DateTime.Now)
                                        .Format("dd/MM/yyyy")
                                        .Deferred()
                                    )
                                    <span class="invalid" data-validation-for="Object.StartDate"></span>
                                </div>
                                <div class="form-group">
                                    <label><span class="required" aria-required="true"> * </span>@Localizer["End Date"]</label>
                                    @(Html.Kendo().DatePickerFor(x => x.Object.EndDate)
                                        .Max(maxDate)
                                        .HtmlAttributes(new { @class = "form-control", @data_validation_for = "Object.EndDate", placeholder = Localizer["Please select date"].Value })
                                        .Enable(AclHelper.CanEdit())
                                        .Format("dd/MM/yyyy")
                                        .Deferred()
                                    )
                                    <span class="invalid" data-validation-for="Object.EndDate"></span>
                                </div>
                                <div class="form-group">
                                    <label>@Localizer["Carrying notebook reason"]</label>
                                    @Html.TextAreaFor(x => x.Object.Reason, ApplicationHelper.Enable(new { @class = "form-control", data_validation_for = "Object.Reason", placeholder = Localizer["Please input a reason if any"].Value, style = "height: 123px;" }, AclHelper.CanEdit()))
                                    <span class="invalid" data-validation-for="Object.Reason"></span>
                                </div>
                                <div class="form-group">
                                    <label>@Localizer["Attachment"]</label>
                                    @if (AclHelper.CanEdit())
                                    {
                                        @(await Component.InvokeAsync<FileUpload>(new { docId = Model.DocumentApprovalId, field = "Object.FilePath" }))
                                        <span class="invalid" data-validation-for="Object.FilePath"></span>
                                    }
                                    else
                                    {
                                        <br />
                                        @await Component.InvokeAsync("Attachment", new { files = Model.Attachments, fieldCategory = "FilePath" })
                                    }
                                </div>
                            </fieldset>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <fieldset>
                                <legend>@Localizer["Notes"]</legend>
                                <div class="form-group inline">
                                    <label>@Localizer["Notes Detail"]</label>
                                    @Html.TextAreaFor(x => x.Object.Remarks, ApplicationHelper.Enable(new { @class = "form-control", data_validation_for = "Object.Remarks", placeholder = Localizer["Please input remarks"].Value, style = "height: 173px;" }, AclHelper.CanEdit()))
                                    <span class="invalid" data-validation-for="Object.Remarks"></span>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>