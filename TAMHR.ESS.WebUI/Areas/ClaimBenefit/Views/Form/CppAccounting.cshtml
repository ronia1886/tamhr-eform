<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Detail BPKB</h4>
                <a class="heading-elements-toggle">
                    <i class="ft-ellipsis-h font-medium-3"></i>
                </a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li>
                            <a data-action="collapse">
                                <i class="ft-minus"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <form class="form-horizontal">
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                <fieldset>
                                    <legend>Data BPKB</legend>
                                    <div class="form-group">
                                        <label>Merek/Type</label>
                                        <select class="form-control">
                                            <option>Merk/Type</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Jenis Model</label>
                                        <select class="form-control">
                                            <option>Jenis/Model</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Tahun Pembuatan</label>
                                        <input type="number" class="form-control" readonly placeholder="Masukkan Tahun Pembuatan">
                                    </div>
                                    <div class="form-group">
                                        <label>Warna</label>
                                        <select class="form-control">
                                            <option>Hitam</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>No Rangka</label>
                                        <input type="text" class="form-control" readonly placeholder="Masukkan No Rangka">
                                    </div>
                                    <div class="form-group">
                                        <label>No Mesin</label>
                                        <input type="text" class="form-control" readonly placeholder="Masukkan No Mesin">
                                    </div>
                                    <div class="form-group">
                                        <label>Atas Nama</label>
                                        <input type="text" class="form-control" readonly placeholder="Atas Nama">
                                    </div>
                                    <div class="form-group">
                                        <label>Alamat</label>
                                        <textarea class="form-control" readonly placeholder="Masukkan Alamat"></textarea>
                                    </div>
                                    <div class="form-group inline">
                                        <label>Karyawan <a onclick="" class="fa fa-search"></a> </label>
                                        <div class="row">
                                            <div class="col-md-4 col-sm-4">
                                                <input type="text" class="form-control">
                                            </div>
                                            <div class="col-md-8 col-sm-8">
                                                <input type="text" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <fieldset>
                                    <legend>Catatan</legend>
                                    <div class="form-group inline">
                                        <label>Detail Catatan</label>
                                        <textarea class="form-control" placeholder="Masukkan Detail Catatan"></textarea>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-content">
                <div class="card-body">
                    <div class="row">
                        <label class="col-md-3 col-sm-3">Kirim Perubahan ?</label>
                        <div class="col-md-9 col-sm-9">
                            <div class="float-right">
                                <button class="btn btn-primary">Approve</button>
                                <button class="btn btn-warning">Revise</button>
                                <button class="btn btn-danger">Reject</button>
                                <button class="btn btn-outline-dark">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>