                                        {
                                            @Html.TextBoxFor(x => x.Object.StnkDate, Model.Object.StnkDate.Value.ToString("dd/MM/yyyy"), ApplicationHelper.Readonly(new { @class = "form-control", data_validation_for = "Object.StnkDate" }, isCanEdit))
