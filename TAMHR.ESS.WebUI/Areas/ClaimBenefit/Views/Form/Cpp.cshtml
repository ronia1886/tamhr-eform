                                        {
                                            @Html.TextBoxFor(x => x.Object.Jasa, ApplicationHelper.Readonly(new { @class = "form-control", data_validation_for = "Object.Jasa" }, false))
                                        }
                                    </div>
                                    <div class="form-group">
