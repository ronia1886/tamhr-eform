                                            .Data(@"function filterType() { return { id: $('#Object_TypeCode').val(),colorCode : $('#Object_ColorCode').val() } }"))
                                        )
                                        .AutoBind(false)
                                        .CascadeFrom("Object_TypeCode")
                                        .Events(e => e.DataBound("readonlyObject"))
                                        .Deferred()
                                    )
                                </div>
